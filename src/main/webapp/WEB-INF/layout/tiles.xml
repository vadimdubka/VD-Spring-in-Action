<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

    <!--Define a base tile-->
    <definition name="base" template="/WEB-INF/layout/page.jsp">
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
    </definition>

    <definition name="home" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <definition name="spittles/registerForm" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/spittles/registerForm.jsp"/>
    </definition>


    <definition name="thymeleaf/login" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/thymeleaf/login.html"/>
    </definition>

    <definition name="spittles/profile" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/spittles/profile.jsp"/>
    </definition>

    <definition name="spittles/spittles" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/spittles/spittles.jsp"/>
    </definition>

    <definition name="spittles/spittle" extends="base">
        <put-attribute name="body" value="/WEB-INF/views/spittles/spittles.jsp"/>
    </definition>

</tiles-definitions>